@model Actor

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <!-- Increased the card's container width -->
            <div class="card shadow-sm">
                <div class="row g-0">
                    <!-- Actor's Profile Picture -->
                    <div class="col-md-4">
                        <img src="~/cast/@Model.ProfilePicture" class="img-fluid rounded-start" alt="@Model.FirstName @Model.LastName" style="max-height: 350px; object-fit: cover;"> <!-- Constrained the image height and ensured it's responsive -->
                    </div>
                    <!-- Actor's Bio and Details -->
                    <div class="col-md-8">
                        <div class="card-body">
                            <h3 class="card-title">@Model.FirstName @Model.LastName</h3>
                            <p class="card-text">
                                <strong>Bio:</strong>
                                @Model.Bio
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .img-fluid {
        width: 100%; /* Ensure image scales properly */
        height: auto;
    }

    .rounded-start {
        border-top-left-radius: 10px;
        border-bottom-left-radius: 10px;
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card-body {
        padding: 25px; /* Adjusted padding for better spacing */
    }

    .card-title {
        font-weight: bold;
        margin-bottom: 15px; /* Adjusted space under title */
        font-size: 1.75rem; /* Increased font size */
    }

    .card-text {
        font-size: 1.1rem; /* Slightly larger text for bio */
        line-height: 1.6; /* Improved line spacing */
    }
</style>
